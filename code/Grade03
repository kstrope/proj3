#!/bin/bash

rm -f result

corr=0;

for i in `seq 1 5`; do
    rm -f tempresult
    ./RadixSort.exe < ./testfiles/t$i >> tempresult
    diff tempresult ./testfiles/o$i >> tempcnt
    if [ -s tempcnt ] ; then
      echo "test $i: fail"
      echo "test $i: fail" >> result
    else
      echo "test $i: success"
      echo "test $i: success" >> result
      ((corr=corr+1))
    fi;
done

echo "score: $corr";
echo $(whoami) "score: ${corr}" >> result

rm -f tempresult
rm -f tempcnt

